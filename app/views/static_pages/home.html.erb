<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-7">
        <h1 class="display-3">My Resumes</h1>
        <p class="lead">Create your resumes for your job hunting!!</p>
      </div>
      <div class="col-12 col-md-5">
        <form class="hidden-xs-down">
          <div class="form-group">
            <label for="formGroupExampleInput" class="sr-only">Example label</label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input">
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2" class="sr-only">Another label</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput3" class="sr-only">Another label</label>
            <input type="text" class="form-control" id="formGroupExampleInput3" placeholder="Another input">
          </div>
          <button type="submit" class="btn btn-primary btn-block">アカウント登録</button>
        </form>
        <div class="hidden-sm-up">
          <%= link_to new_user_registration_path, class: "btn btn-primary btn-lg" do %>
            <%= I18n.t('devise.registrations.new.sign_up') %>
          <% end %>
        </div>
      </div>
  </div>
</div>
